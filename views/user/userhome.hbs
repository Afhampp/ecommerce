 <div class="container-fluid">
 
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" style="height: 41rem;">
                    {{#if banner1.view}}
                    <div class="carousel-item active">
                    
                    <img class="d-block w-100" src="/images/uploads/{{banner1.images}}" alt="First slide" style="    height: 40rem;">
                    
                    </div>
                    {{/if}}
                     {{#if banner2.view}}
                    <div class="carousel-item">
                       
                    <img class="d-block w-100" src="/images/uploads/{{banner2.images}}"  alt="Second slide" style="    height: 40rem;">
                   
                    </div>
                     {{/if}}
                    {{#if banner3.view}}
                    <div class="carousel-item">
                        
                    <img class="d-block w-100" src="/images/uploads/{{banner3.images}}"  alt="Third slide" style="    height: 40rem;">
                    
                    </div>
                    {{/if}}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
        </div>
