<script>
             function downloadPDF() {
            var table = document.getElementById("tabledata");
            var newWin = window.open('', 'Print-Window');
            newWin.document.open();
            newWin.document.write('<html><body onload="window.print()">' + table.outerHTML + '</html>');
            newWin.document.close();
            setTimeout(function () { newWin.close(); }, 10);
		      }
        </script>
           <script>
            function downloadExcel() {
  var table = document.getElementById("tabledata");
  var worksheet = XLSX.utils.table_to_sheet(table);
  var workbook = XLSX.utils.book_new();
  XLSX.utils.book_append_sheet(workbook, worksheet, "Sheet1");
  XLSX.writeFile(workbook, "table.xlsx");
}
         </script>
 <script>
 // Listen for the "change" event of the input element
$('#from, #to').on('change', function() {
  // Get the selected date value
  var startDate = $('#from').val();
  var endDate = $('#to').val();

  // Send an AJAX request to the server
  $.ajax({
    url: '/admin/home?datefrom=' + encodeURIComponent(startDate) + '&dateto=' + encodeURIComponent(endDate),
    success: function(response) {
      // Clear the table first
      $('#tabledata tbody').empty();

      // Loop through the sales data and append rows to the table
      $.each(response.sales, function(index, sale) {
        $('#tabledata tbody').append(`
          <tr>
            <th scope="row">${index + 1}</th>
            <td>${sale._id}</td>
            <td><a class="text-primary">${sale.address[0].firstname}</a></td>
            <td>${sale.totalprice}</td>
          </tr>
        `);
      });

      // Update the total sales amount
      $('#tabledata tfoot td:last-child').text(response.salestotal);
    }
  });
});


 </script>
 

